<?xml version="1.0"?>
	<faces-config version="2.2"
		xmlns="http://xmlns.jcp.org/xml/ns/javaee"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
		<application>
			<el-resolver>
				org.springframework.web.jsf.el.SpringBeanFacesELResolver
			</el-resolver>
			
			<!-- Aderindo classes para uso de escopo de view para o spring -->
		<system-event-listener>
			<system-event-listener-class>
				br.com.jortec.listener.ViewScopeCallbackRegistrer
			</system-event-listener-class>
			<system-event-class>
				javax.faces.event.PostConstructViewMapEvent
			</system-event-class>
			<source-class>
				javax.faces.component.UIViewRoot
			</source-class>
		</system-event-listener>

		<system-event-listener>
			<system-event-listener-class>
				br.com.jortec.listener.ViewScopeCallbackRegistrer
			</system-event-listener-class>
			<system-event-class>
				javax.faces.event.PreDestroyViewMapEvent
			</system-event-class>
			<source-class>
				javax.faces.component.UIViewRoot
			</source-class>
		</system-event-listener>
		</application>
		<lifecycle>
			<phase-listener>
				br.com.jortec.listener.AutorizacaoListener
			</phase-listener>
		</lifecycle>
		
	</faces-config>
